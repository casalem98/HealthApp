<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:id="@+id/dancePicture"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/unicorn_dance"
        android:scaleType="fitXY"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:text="Username"
        android:textSize="20sp"
        android:layout_below="@+id/dancePicture" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="Email"
        android:textSize="20sp"
        android:layout_below="@+id/textUsername" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="Password"
        android:textSize="20sp"
        android:layout_below="@+id/textEmail" />

    <TextView
        android:id="@+id/textConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="Re-enter Pass"
        android:textSize="20sp"
        android:layout_below="@+id/textPassword" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:layout_below="@+id/textConfirm" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Back"
        android:layout_below="@+id/btnCreate" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/textUsername"
        android:layout_below="@+id/dancePicture"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_toRightOf="@+id/textUsername"
        android:layout_below="@+id/txtUsername"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="25dp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/textUsername"
        android:layout_below="@+id/txtEmail"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp" />

    <EditText
        android:id="@+id/txtConfirmPass"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/textConfirm"
        android:layout_below="@+id/txtPassword"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="25dp" />


</RelativeLayout>