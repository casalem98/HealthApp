<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            >

            <ImageView
                android:id="@+id/picture"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/unicorn_profile"
                android:scaleType="fitXY"
                android:padding="20dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="About"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/picture"

                android:layout_marginTop="45dp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about"
                android:layout_toRightOf="@+id/picture"
                android:hint="Username"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/ageHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="age"
                android:layout_below="@+id/picture"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/ageUser"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/picture"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/genderHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="gender"
                android:layout_below="@+id/ageHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                />

            <Spinner
                android:id="@+id/genderUser"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="gender"
                android:layout_below="@+id/ageHint"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/weightHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="weight"
                android:layout_below="@+id/genderHint"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="17dp"
                />

            <EditText
                android:id="@+id/weightUser"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genderHint"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/heightHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="height"
                android:layout_below="@+id/weightHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                 />

            <EditText
                android:id="@+id/feetUser"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="ft."
                android:layout_below="@+id/weightUser"
                android:layout_alignLeft="@+id/weightUser"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/inchUser"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="in."
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_below="@+id/weightUser"
                android:layout_alignRight="@+id/weightUser"
                />

            <TextView
                android:id="@+id/activityHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="activity"
                android:layout_below="@+id/heightHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                />

            <Spinner
                android:id="@+id/activityUser"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="activity"
                android:layout_below="@+id/heightHint"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/goalHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="goal"
                android:layout_below="@+id/activityHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                />

            <Spinner
                android:id="@+id/goalUser"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="goal"
                android:layout_below="@+id/activityHint"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:layout_below="@+id/goalHint"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/changeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editBtn"
                android:text="Change Password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/logOutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/changeBtn"
                android:text="LogOut"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"/>

        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>